@page "/cart/{userId:int}"
@inject CartStorageService CartStorageService
<h3>CartUserPage</h3>

@if (cartItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var item in cartItems)
        {
            <div class="row">
                <div class="col-md-4">
                    <img src="@item.Image" alt="@item.Name" class="img-fluid" />
                </div>
                <div class="col-md-4">
                    <h5>@item.Name</h5>
                    <p>@item.Description</p>
                    <p>Price: @item.Price</p>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-danger" @onclick="() => RemoveFromCart(item)">Remove from Cart</button>
                    <button class="btn btn-primary" @onclick="() => OrderItem(item)">Order Item</button>
                </div>
            </div>
            <hr />
        }
    </ul>
}

@code {
    [Parameter]
    public int UserId { get; set; }

    private List<ProductModel> cartItems;

